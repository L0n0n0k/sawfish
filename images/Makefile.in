include ../Makedefs

top_builddir=..
top_srcdir=@top_srcdir@

SUBDIRS = absolute-e brushed-metal misc
INSTALL_DIRS = $(SUBDIRS:%=$(sawmilldir)/images/%)

all :

clean realclean :

install : all installdirs
	for d in $(SUBDIRS); do \
	  for f in $$d/*; do \
	    $(INSTALL_DATA) $$f $(sawmilldir)/images/$$d; \
	  done \
	done
	
uninstall :
	for d in $(SUBDIRS); do \
	  for f in $$d/*; do \
	    rm -f $(sawmilldir)/images/$$f; \
	  done \
	done

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs $(INSTALL_DIRS)

.PHONY : all clean realclean install uninstall installdirs
