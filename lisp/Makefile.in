include ../Makedefs

top_srcdir=@top_srcdir@

# also in themes/Makefile.in
sawmill_prog = $(rep_LIBTOOL) --mode=execute -dlopen ../src/libgradient.la \
		../src/sawmill --batch --no-rc
COMPILE_ENV = SAWMILLLISPDIR=. SAWMILLDOCFILE=../DOC

INSTALL_FILES := *.jl *.jlc

all : lisp

lisp :
	$(COMPILE_ENV) $(sawmill_prog) compiler -f compile-lib-batch .

install : all installdirs
	for f in $(INSTALL_FILES); do \
	  $(INSTALL_DATA) $$f $(lispdir); \
	done

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs $(lispdir)

uninstall :
	for f in $(INSTALL_FILES); do \
	  rm -f $(lispdir)/$$f; \
	done

clean :
	rm -f *.jlc *.jld *~

realclean : clean
	rm -f Makefile

.PHONY : all lisp install uninstall clean realclean
