include ../../Makedefs

top_srcdir=@top_srcdir@

sawmill_prog = ../../src/sawmill --batch --no-rc
COMPILE_ENV = SAWMILLLISPDIR=.. SAWMILLDOCFILE=../../DOC

LISP_SRCS := absolute-e.jl brushed-metal.jl simple.jl
LISP_OBJS := $(LISP_SRCS:.jl=.jlc)
INSTALL_FILES := $(LISP_SRCS) $(LISP_OBJS)

%.jlc : %.jl
	$(COMPILE_ENV) $(sawmill_prog) compiler -f compile-batch $<

all : $(LISP_OBJS)

install : all installdirs
	for f in $(INSTALL_FILES); do \
	  $(INSTALL_DATA) $$f $(lispdir)/themes; \
	done

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs $(lispdir)/themes

uninstall :
	for f in $(INSTALL_FILES); do \
	  rm -f $(lispdir)/themes/$$f; \
	done

clean :
	rm -f *.jlc *.jld *~

realclean : clean
	rm -f Makefile

.PHONY : all lisp install uninstall clean realclean
