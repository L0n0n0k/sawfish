include ../Makedefs

top_srcdir=@top_srcdir@

themedir := ${sawmilldir}/${version}/themes

sawmill_prog = ../src/sawmill --batch --no-rc
COMPILE_ENV = SAWMILLLISPDIR=../lisp SAWMILLDOCFILE=../DOC

THEMES := absolute-e brushed-metal simple

all :
	for d in $(THEMES); do \
	  $(COMPILE_ENV) $(sawmill_prog) compiler -f compile-lib-batch $$d; \
	done

install : all installdirs
	for d in $(THEMES); do \
	  rm -rf $(themedir)/$$d; \
	  cp -af $$d $(themedir); \
	done

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs $(themedir)

uninstall :
	for d in $(THEMES); do \
	  rm -rf $(themedir)/$$d; \
	done

clean :
	for d in $(THEMES); do \
	  rm -f $$d/*.jlc $$d/*~; \
	done
	rm -f *.jlc *.jld *~

realclean : clean
	rm -f Makefile

.PHONY : all lisp install uninstall clean realclean
