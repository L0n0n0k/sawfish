include ./Makedefs

top_builddir=.
top_srcdir=@top_srcdir@

SUBDIRS = @SUBDIRS@

all : build.h DOC.dir NEWS FAQ
	set -e; for dir in $(SUBDIRS); do \
	  [ -d $$dir ] && ( cd $$dir && $(MAKE) $@ ); \
 	done

# this depends on config.status so it's rebuilt if configure is re-run
build.h : build-info config.status
	$(SHELL) $< $(host_type) $(version) \
	  '$(sawmilldir)' '$(lispdir)' '$(sawmillexecdir)'

install : all installdirs
	-set -e; for dir in $(SUBDIRS); do \
	  ( cd $$dir && $(MAKE) $@ ); \
	done
	$(INSTALL_DATA) ./DOC.dir $(DESTDIR)$(sawmilldir)/$(version)
	$(INSTALL_DATA) ./DOC.pag $(DESTDIR)$(sawmilldir)/$(version)
	-set -e; for d in $(prefix) $(DESTDIR)$(GNOMEDIRS); do \
	  if [ -d $$d/share/gnome/wm-properties ]; then \
	    $(INSTALL_DATA) Sawmill.desktop $(DESTDIR)$$d/share/gnome/wm-properties; \
	    break; \
	  fi \
	done

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs $(DESTDIR)$(sawmilldir)/$(version) $(DESTDIR)$(bindir)

uninstall :
	set -e; for dir in $(SUBDIRS); do \
	  ( cd $$dir && $(MAKE) $@ ); \
	done
	rm -rf $(DESTDIR)$(sawmilldir)/$(version)

DOC.dir :
	repdoc DOC `find . -name '*.c' -print`

NEWS : man/news.texi
	(cd man && $(MAKE) ../NEWS )

FAQ : man/faq.texi
	(cd man && $(MAKE) ../FAQ )

clean :
	-set -e; for dir in $(SUBDIRS); do \
	  [ -d $$dir ] && ( cd $$dir && $(MAKE) $@ ); \
	done
	rm -f *~ NEWS DOC.* TAGS build.h

realclean :
	-set -e; for dir in $(SUBDIRS); do \
	  [ -d $$dir ] && ( cd $$dir && $(MAKE) $@ ); \
	done
	rm -f config.cache config.h config.log config.status Makedefs Makefile
	rm -f *~ NEWS DOC.* TAGS build.h sawmill.spec

TAGS :
	etags --language=c `find . -name '*.[ch]' -print` \
	      --language=lisp `find . -name '*.jl' -print`

.PHONY: install uninstall tar nobak clean realclean TAGS
