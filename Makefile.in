include ./Makedefs

top_builddir=.
top_srcdir=@top_srcdir@

SUBDIRS = @SUBDIRS@

OLD_BINARIES = sawmill sawmill-client sawmill-capplet sawmill-ui sawmill-themer

all : build.h DOC NEWS FAQ
	set -e; for dir in $(SUBDIRS); do \
	  [ -d $$dir ] && ( cd $$dir && $(MAKE) $@ ); \
 	done

# this depends on config.status so it's rebuilt if configure is re-run
build.h : build-info config.status
	$(SHELL) $< $(host_type) $(version) \
	  '$(sawfishdir)' '$(lispdir)' '$(sawfishexecdir)'

install : all installdirs
	-set -e; for dir in $(SUBDIRS); do \
	  ( cd $$dir && $(MAKE) $@ ); \
	done
	for f in ./DOC*; do \
	  $(INSTALL_DATA) $$f $(DESTDIR)$(sawfishdir)/$(version); \
	done
	-set -e; for d in $(prefix) $(DESTDIR)$(GNOMEDIRS); do \
	  if [ -d $$d/share/gnome/wm-properties ]; then \
	    rm -f $(DESTDIR)$$d/share/gnome/wm-properties/Sawmill.desktop; \
	    $(INSTALL_DATA) Sawfish.desktop $(DESTDIR)$$d/share/gnome/wm-properties; \
	    break; \
	  fi \
	done
	-set -e; for f in $(OLD_BINARIES); do \
	  if [ -x $(DESTDIR)$(bindir)/$$f ]; then \
	    rm -f $(DESTDIR)$(bindir)/$$f; \
	    $(INSTALL_SCRIPT) moved $(DESTDIR)$(bindir)/$$f; \
	  fi \
	done

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs $(DESTDIR)$(sawfishdir)/$(version) $(DESTDIR)$(bindir)

uninstall :
	set -e; for dir in $(SUBDIRS); do \
	  ( cd $$dir && $(MAKE) $@ ); \
	done
	rm -rf $(DESTDIR)$(sawfishdir)/$(version)

DOC :
	repdoc DOC `find . -name '*.c' -print`

NEWS : man/news.texi
	(cd man && $(MAKE) ../NEWS )

FAQ : man/faq.texi
	(cd man && $(MAKE) ../FAQ )

clean :
	-set -e; for dir in $(SUBDIRS); do \
	  [ -d $$dir ] && ( cd $$dir && $(MAKE) $@ ); \
	done
	rm -f *~ NEWS DOC* TAGS build.h

realclean :
	-set -e; for dir in $(SUBDIRS); do \
	  [ -d $$dir ] && ( cd $$dir && $(MAKE) $@ ); \
	done
	rm -f config.cache config.h config.log config.status Makedefs Makefile
	rm -f *~ NEWS DOC* TAGS build.h sawfish.spec

TAGS :
	etags --language=c `find . -name '*.[ch]' -print` \
	      --language=lisp `find . -name '*.jl' -print`

.PHONY: install uninstall tar nobak clean realclean TAGS
