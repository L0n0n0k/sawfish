(provide 'nokogiri-interfaces)

(defvar *nokogiri-directory* "__nokogiridir__")

(define-interface nokogiri-apply-interface
  (export define-change-handler
	  apply-slot-changes
	  revert-slot-changes
	  changes-to-apply-p
	  changes-to-revert-p))

(define-interface nokogiri-color-preview-interface
  (export button-new-with-color
	  set-button-color))

(define-interface nokogiri-config-interface
  (export define-config-item
	  initialize-configs))

(define-interface nokogiri-gnome-interface
  (export stock-button
	  simple-dialog))

(define-interface nokogiri-group-interface
  (export group-real-name
	  group-slots
	  group-sub-groups
	  group-layout
	  root-group
	  top-group
	  set-top-group
	  get-group
	  fetch-group
	  update-group
	  get-sub-groups
	  make-group-tree
	  select-group
	  redisplay-group))

(define-interface nokogiri-i18n-interface
  (export i18n-lang
	  i18n-filename
	  i18n-init))

(define-interface nokogiri-layout-interface
  (export define-layout-type
	  layout-slots
	  document-slot
	  remove-newlines
	  make-label))

(define-interface nokogiri-shell-interface
  (export initialize-shell
	  destroy-shell
	  run-shell
	  main-window))

(define-interface nokogiri-slot-interface
  (export slot-name
	  slot-widget
	  slot-old-value
	  slot-user-level
	  slot-gtk-widget
	  slot-doc
