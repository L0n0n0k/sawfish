  (export slot-is-appropriate-p))

(define-interface nokogiri-widget-dialog-interface
  (export widget-dialog))

(define-interface nokogiri-widget-interface
  (export define-widget-type
	  widget-type-constructor
	  widget-accepts-doc-string
	  widget-accepts-doc-string-p
	  make-widget
	  widget-ref
	  widget-set
	  widget-clear
	  widget-gtk-widget
	  widget-valid-p
	  call-callback
	  make-signal-callback
	  set-widget-enabled
	  enable-widget
	  disable-widget
	  box-spacing
	  box-border))

(define-interface nokogiri-wm-interface
  (export wm-load-slots
	  wm-load-group
	  wm-apply-changes
	  wm-locale-dir
	  wm-grab-x-property
	  wm-grab-key
	  wm-command-list
	  wm-documentation))


