include ../Makedefs

top_builddir=..
top_srcdir=@top_srcdir@
srcdir=@srcdir@
VPATH=@top_srcdir@/src:.

SRCS :=	colors.c commands.c cursors.c display.c events.c fonts.c frames.c \
	functions.c images.c keys.c main.c pixmap-cache.c server.c \
	session.c windows.c
OBJS := $(SRCS:.c=.o)

DL_SRCS := gradient.c flippers.c x.c selection.c play-sample.c
DL_OBJS := $(DL_SRCS:%.c=%.la)

LISP_SRCS := sawmill-menu.jl
LISP_OBJS := $(LISP_SRCS:.jl=.jlc)

override CFLAGS := $(CFLAGS) $(REP_CFLAGS) $(IMAGE_CFLAGS) $(X11_CFLAGS) $(ESD_CFLAGS)

all : sawfish sawfish-client libclient.o $(DL_OBJS) $(LISP_OBJS) gtk-style

sawfish : $(OBJS) $(LIBOBJS)
	$(rep_LIBTOOL) $(CC) -export-dynamic $(LDFLAGS) \
	  -o sawfish $(OBJS) $(LIBOBJS) $(REP_LIBS) \
	  $(IMAGE_LIBS) $(X11_LIBS) $(LIBS)

sawfish-client : client.o libclient.o
	$(CC) $(LDFLAGS) -o $@ $^ $(LIBOBJS) $(X11_LIBS) $(READLINE_LIBS) $(LIBS)

%.la : %.lo
	$(rep_DL_LD) $(LDFLAGS) -o $@ $<

play-sample.la : play-sample.lo
	$(rep_DL_LD) $(LDFLAGS) -o $@ $< $(ESD_LIBS) $(AUDIOFILE_LIBS)

%.jlc : %.jl
	REP_GTK_DONT_INITIALIZE=1 rep compiler -f compile-batch $<

gtk-style : gtk-style.c
	$(CC) $(CPPFLAGS) $(GTK_CFLAGS) $(LDFLAGS) -o $@ $< $(GTK_LIBS) $(LIBS)

install : all installdirs
	for p in sawfish sawfish-client; do \
	  $(rep_LIBTOOL) $(INSTALL_PROGRAM) $$p $(DESTDIR)${bindir}; \
	done
	for p in gtk-style $(DL_OBJS); do \
	  $(rep_DL_INSTALL) $$p $(DESTDIR)${sawfishexecdir}; \
	done
	$(INSTALL_SCRIPT) sawmill-menu.jlc $(DESTDIR)$(sawfishexecdir)/sawfish-menu

uninstall :
	for p in sawfish sawfish-client; do \
	  $(rep_LIBTOOL) rm $(DESTDIR)${bindir}/$$p; \
	done
	for p in gtk-style $(DL_OBJS); do \
	  $(rep_DL_UNINSTALL) $(DESTDIR)${sawfishexecdir}/$$p; \
	done
	rm -f $(DESTDIR)${sawfishexecdir}/sawfish-menu

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs $(DESTDIR)$(bindir) \
	  $(DESTDIR)$(sawfishexecdir)

clean :
	rm -f *~ *.o *.lo *.la *.jlc build.h core

realclean : clean
	rm -f .*.d sawfish sawfish-client Makefile gtk-style
	rm -rf .libs

include $(SRCS:%.c=.%.d) $(DL_SRCS:%.c=.%.d)
