include ../Makedefs

top_builddir=..
top_srcdir=@top_srcdir@
srcdir=@srcdir@
VPATH=@top_srcdir@/src:.

SRCS :=	colors.c commands.c cursors.c display.c events.c fonts.c frames.c \
	functions.c images.c keys.c main.c server.c session.c windows.c
OBJS := $(SRCS:.c=.o)

DL_SRCS := gradient.c
DL_OBJS := $(DL_SRCS:%.c=lib%.la)

LISP_SRCS := sawmill-ui.jl sawmill-menu.jl
LISP_OBJS := $(LISP_SRCS:.jl=.jlc)

override CFLAGS := $(CFLAGS) $(REP_CFLAGS) $(IMLIB_CFLAGS) $(X11_CFLAGS)

all : sawmill sawmill-client $(DL_OBJS) $(LISP_OBJS) gtk-style

sawmill : $(OBJS) $(LIBOBJS)
	$(rep_LIBTOOL) $(CC) -export-dynamic $(LDFLAGS) \
	  -o sawmill $(OBJS) $(LIBOBJS) $(REP_LIBS) \
	  $(IMLIB_LIBS) $(X11_LIBS) $(LIBS)

sawmill-client : client.o
	$(CC) $(LDFLAGS) -o $@ $< $(LIBOBJS) $(X11_LIBS) $(LIBS)

lib%.la : %.lo
	$(rep_DL_LD) $(LDFLAGS) -o $@ $<

%.jlc : %.jl
	rep compiler -f compile-batch $<

gtk-style : gtk-style.c
	$(CC) $(CPPFLAGS) $(GTK_CFLAGS) $(LDFLAGS) -o $@ $< $(GTK_LIBS) $(LIBS)

install : all installdirs
	for p in sawmill sawmill-client; do \
	  $(rep_LIBTOOL) $(INSTALL_PROGRAM) $$p ${bindir}; \
	done
	for p in gtk-style $(DL_OBJS); do \
	  $(rep_DL_INSTALL) $$p ${sawmillexecdir}; \
	done
	$(INSTALL_PROGRAM) sawmill-ui.jlc $(bindir)/sawmill-ui
	$(INSTALL_PROGRAM) sawmill-menu.jlc $(sawmillexecdir)/sawmill-menu
	if [ -f $(bindir)/sawmill-menu ]; then \
	  rm -f $(bindir)/sawmill-menu; \
	fi

uninstall :
	for p in sawmill sawmill-client; do \
	  $(rep_LIBTOOL) rm ${bindir}/$$p; \
	done
	for p in gtk-style $(DL_OBJS); do \
	  $(rep_DL_UNINSTALL) ${sawmillexecdir}/$$p; \
	done
	rm -f ${bindir}/sawmill-ui ${sawmillexecdir}/sawmill-menu

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs $(bindir) $(sawmillexecdir)

clean :
	rm -f *~ *.o *.lo *.la build.h core

realclean : clean
	rm -f .*.d sawmill sawmill-client Makefile *.jlc gtk-style
	rm -rf .libs

include $(SRCS:%.c=.%.d) $(DL_SRCS:%.c=.%.d)
