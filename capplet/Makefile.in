include ../Makedefs

top_builddir=..
top_srcdir=@top_srcdir@
srcdir=@srcdir@
VPATH=@top_srcdir@/src:.

GNOME_DIRS := / /usr /usr/local /opt /gnome /opt/gnome

override CFLAGS += $(GNOME_CC_CFLAGS)
override LIBS += $(GNOME_CC_LIBS)

build_capplet=@build_capplet@

ifneq ($(build_capplet),0)

all : sawmill-capplet

sawmill-capplet : sawmill-capplet.c ../src/libclient.o
	$(CC) $(CPPFLAGS) $(CFLAGS) $(LDFLAGS) -o $@ $^ $(LIBS)

install : all installdirs
	for p in sawmill-capplet; do \
	  $(INSTALL_PROGRAM) $$p $(DESTDIR)${bindir}; \
	done
	-set -e; for d in $(prefix) $(GNOME_DIRS); do \
	  if [ -d $(DESTDIR)$$d/share/control-center ]; then \
	    rm -rf $(DESTDIR)$$d/share/control-center/Sawmill; \
	    cp -r desktop-entries $(DESTDIR)$$d/share/control-center/Sawmill; \
	    break; \
	  fi \
	done

uninstall :
	for p in sawmill-capplet; do \
	  rm -f $(DESTDIR)${bindir}/$$p; \
	done
	-set -e; for d in / /usr /usr/local /opt /gnome; do \
	  if [ -d $(DESTDIR)$$d/share/control-center ]; then \
	    rm -rf $(DESTDIR)$$d/share/control-center/Sawmill; \
	    break; \
	  fi \
	done

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs $(DESTDIR)$(bindir)

clean :
	rm -f *~ *.o *.lo *.la build.h core

realclean : clean
	rm -f .*.d sawmill-capplet Makefile

include .sawmill-capplet.d

else

all :

install :

uninstall :

realclean :

clean :

endif
