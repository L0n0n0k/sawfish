include ../Makedefs

top_builddir=..
top_srcdir=@top_srcdir@
srcdir=@srcdir@
VPATH=@top_srcdir@/src:.

override CFLAGS += $(GNOME_CC_CFLAGS)
override LIBS += $(GNOME_CC_LIBS)

G_CC_INFIX := share/control-center
G_MENU_INFIX := share/gnome/apps/Settings

all : sawmill-capplet

sawmill-capplet : sawmill-capplet.c ../src/libclient.o
	$(CC) $(CPPFLAGS) $(CFLAGS) $(LDFLAGS) -o $@ $^ $(LIBS)

install : all installdirs
	for p in sawmill-capplet; do \
	  $(INSTALL_PROGRAM) $$p $(DESTDIR)${bindir}; \
	done
	-set -e; for d in $(prefix) $(GNOMEDIRS); do \
	  if [ -d $(DESTDIR)$$d/$(G_CC_INFIX) ]; then \
	    rm -rf $(DESTDIR)$$d/$(G_CC_INFIX)/Sawmill; \
	    mkdir $(DESTDIR)$$d/$(G_CC_INFIX)/Sawmill; \
	    cp desktop-entries/.directory $(DESTDIR)$$d/$(G_CC_INFIX)/Sawmill/; \
	    for f in desktop-entries/*.desktop; do \
	      cp $$f $(DESTDIR)$$d/$(G_CC_INFIX)/Sawmill/; \
	    done; \
	    break; \
	  fi \
	done
	-set -e; for d in $(prefix) $(GNOMEDIRS); do \
	  if [ -d $(DESTDIR)$$d/$(G_MENU_INFIX) ]; then \
	    rm -rf $(DESTDIR)$$d/$(G_MENU_INFIX)/Sawmill; \
	    mkdir $(DESTDIR)$$d/$(G_MENU_INFIX)/Sawmill; \
	    cp desktop-entries/.directory $(DESTDIR)$$d/$(G_MENU_INFIX)/Sawmill/; \
	    for f in desktop-entries/*.desktop; do \
	      cp $$f $(DESTDIR)$$d/$(G_MENU_INFIX)/Sawmill/; \
	    done; \
	    break; \
	  fi \
	done

uninstall :
	for p in sawmill-capplet; do \
	  rm -f $(DESTDIR)${bindir}/$$p; \
	done
	-set -e; for d in $(prefix) $(GNOMEDIRS); do \
	  if [ -d $(DESTDIR)$$d/$(G_CC_INFIX)/Sawmill ]; then \
	    rm -rf $(DESTDIR)$$d/$(G_CC_INFIX)/Sawmill; \
	  fi; \
	  if [ -d $(DESTDIR)$$d/$(G_MENU_INFIX)/Sawmill ]; then \
	    rm -rf $(DESTDIR)$$d/$(G_MENU_INFIX)/Sawmill; \
	  fi \
	done

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs $(DESTDIR)$(bindir)

clean :
	rm -f *~ *.o *.lo *.la build.h core

realclean : clean
	rm -f .*.d sawmill-capplet Makefile

include .sawmill-capplet.d
