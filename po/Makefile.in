include ../Makedefs
top_srcdir=@top_srcdir@
top_builddir=..

PO_FILES=$(LINGUAS:%=%.po)
MO_FILES=$(LINGUAS:%=%.mo)

all : $(MO_FILES) sawmill.pot

sawmill.pot :
	rep-xgettext ../lisp/*.jl ../themes/*/theme.jl >$@

ifneq ($(MO_FILES),)
install : $(MO_FILES) installdirs
	for f in $(MO_FILES); do \
	  st=`basename $$f .mo`; \
	  if test '!' -d $(DESTDIR)$(localedir)/$$st/LC_MESSAGES/; then \
	    $(SHELL) $(top_srcdir)/mkinstalldirs $(DESTDIR)$(localedir)/$$st/LC_MESSAGES; \
	  fi; \
	  $(INSTALL_DATA) $$f $(DESTDIR)$(localedir)/$$st/LC_MESSAGES/sawmill.mo; \
	done
else
install : $(MO_FILES) installdirs

endif

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs $(DESTDIR)$(localedir)

uninstall :
	rm -f $(DESTDIR)$(localedirdir)

clean :
	rm -f core *~

realclean : clean
	rm -f Makefile *.mo sawmill.pot

.PHONY : all install uninstall clean realclean
