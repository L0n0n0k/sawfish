include ../Makedefs

top_srcdir=@top_srcdir@

INSTALL_FILES := *.wav

sitesoundsdir := ${sawfishdir}/sounds
soundsdir := ${sawfishdir}/${version}/sounds

all :

install : all installdirs
	for f in $(INSTALL_FILES); do \
	  $(INSTALL_DATA) $$f $(DESTDIR)$(soundsdir)/$$f; \
	done

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs \
	  $(DESTDIR)$(soundsdir) $(DESTDIR)$(sitesoundsdir)

uninstall :
	for f in $(INSTALL_FILES); do \
	  rm -f $(DESTDIR)$(soundsdir)/$$f; \
	done

clean :
	rm -f *~ core

realclean : clean
	rm -f Makefile

.PHONY : all install uninstall clean realclean
